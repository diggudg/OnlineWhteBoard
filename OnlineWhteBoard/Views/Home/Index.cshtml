@{
    ViewBag.Title = "Home Page";
}
<div ng-controller="chatController as data">
    <div class="row" >
        <div class="col-sm-8">
            <canvas width="600" height="400" class="canvas "></canvas>
        </div>
        <div class="col-sm-4">
            <div class="row">
                <div class="well">
                    <div class="chatBox">
                        <ul>
                            <li ng-repeat="chat in data.Messages">
                                <span ng-bind="chat"></span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">

                    <div class="col-md-10">
                        Group:<select ng-model="selectedName" ng-options="item for item in data.groupName"></select>
                    </div>


                </div>
                <div class="form-group">

                    <div class="col-md-10">
                        Name:{{Name}}@*<input type="text" ng-model="Name" class="form-control" name="NewMessage " />*@
                    </div>


                </div>
                <div class="form-group">

                    <div class="col-md-10">
                        Message:<input type="text" ng-model="data.Message" class="form-control" name="NewMessage " />
                    </div>
                    <div class="col-md-2 ">
                        <button type="submit" class="btn btn-primary" ng-click="data.newMessage(selectedName,Name,data.Message)">Send</button>
                    </div>

                </div>
            </div>


        </div>

    </div>
    <div class="container text-center">
        <h3>What We Do</h3>
        <br>
        <div class="row">
            <div class="col-sm-3">
                <button type="button" class="btn btn-warning" name="CreateGroup" data-toggle="modal" data-target="#joinGroupModal"><i class="glyphicon glyphicon-plus success"></i>Create group</button>
                <div class="modal fade " id="joinGroupModal" role="dialog" data-backdrop="static" data-keyboard="false">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                           
                            <div class="modal-body ">
                                <div class="well modal-color">
                                 
                                        <div class="form-group">
                                            <label for="username" class="control-label">Group Name</label>
                                            <input type="text" ng-model="groupName" class="form-control" id="username" name="username" value="" required="" title="Please enter Group Name" placeholder="Group Name">
                                            <span class="help-block"></span>
                                        </div>
                                       
                                       
                                        <button type="button" class="btn btn-success green" ng-click="data.createGroup(groupName)" data-dismiss="modal">Login</button>

                                    
                                </div>
                            </div>
                           
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <img src="http://placehold.it/150x80?text=IMAGE" class="img-responsive" style="width:100%" alt="Image">
                <p>Project 2</p>
            </div>
            <div class="col-sm-3">
                <div class="well">
                    <p>Some text..</p>
                </div>
                <div class="well">
                    <p>Some text..</p>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="well">
                    <p>Some text..</p>
                </div>
                <div class="well">
                    <p>Some text..</p>
                </div>
            </div>
        </div>
        <hr>
    </div>
</div>
